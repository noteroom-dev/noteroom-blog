    <script>
      // Tracks the download event
      document
        .getElementById("productvityCodeDownload")
        .addEventListener("click", function (event) {
          event.preventDefault(); // Prevent default link action

          const fileUrl =
            "../assets/The-Productivity-Code-Anirban-Biswas-Ebook.pdf"; // File URL

          // Send Google Analytics Event
          gtag("event", "book_download", {
            event_category: "Downloads",
            event_label: "The Productivity Code",
          });

          // Create an invisible link and trigger download
          const link = document.createElement("a");
          link.href = fileUrl;
          link.setAttribute(
            "download",
            "The Productivity Code - Anirban Biswas.pdf"
          );
          document.body.appendChild(link);
          link.click();
          document.body.removeChild(link);

          // Delay the popup to simulate download completion
          setTimeout(() => {
            Swal.fire({
              imageUrl: '/assets/android-chrome-192x192.png', // Replace with your logo URL
            imageWidth: 60, // Adjust the logo size as needed
            imageHeight: 60, // Adjust the logo size as needed
            imageAlt: 'Noteroom Logo', // Alt text for the logo
              html: `
                <p>Just like <strong>The Productivity Code</strong> will help you stay focused and distraction-free, 
                <strong>Noteroom</strong> helps students study efficiently—without distractions.</p>
            `,
              showCancelButton: true,
              confirmButtonText: "Join Noteroom",
              cancelButtonText: "Not a HSC Student",
              customClass: {
                popup: "swal-custom-popup",
                title: "swal-custom-title",
                confirmButton: "swal-custom-button",
                cancelButton: "swal-custom-cancel",
              },
            }).then((result) => {
              if (result.isConfirmed) {
                window.location.href = "https://noteroom.co/sign-up"; // Redirect to absolute URL
              }
            });
          }, 2000); // Adjust delay time (5000ms = 5 seconds)
        });
    </script>
